.root {
  position: relative;
  width: 100%;
  height: 100%;
}

card {
  display: flex;
}

card > view > card {
  white-space: nowrap;
  position: absolute !important;
  left: 50%;
  bottom: 0;
  transform: translate3d(-50%, 0, 0);
}

.card {
  border-radius: 5px;
}

.card-image {
  width: 100%;
  height: 100%;
}

.card-icon {
  width: 30px;
  height: 30px;
  align-self: flex-end;
  padding-bottom: 1px;
}

.card-text {
  align-self: center;
  padding: 0 6px;
  color: white;
  background-color: #394148;
}

.text {
  font-size: 0.8em;
  word-break: break-all;
}

.que {
  border-radius: 10px;
  display: flex;
  justify-content: space-between;
}

.text-que {
  flex-direction: column;
}

.combine-que {
  flex-direction: row-reverse;
}
