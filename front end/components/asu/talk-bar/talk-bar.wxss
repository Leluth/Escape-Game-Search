/* components/asu/talk-bar/talk-bar.wxss */

talk-bar {
  display: flex;
  align-items: flex-start;
}

talk-bar > card {
  width: 50px;
  height: 50px;
  margin: 10px 10px 10px 5px;
  flex-shrink: 0;
}

.talk-info {
  color: white;
  flex-grow: 1;
}

.talk-info > text {
  display: block;
}

.talk-info > text:nth-of-type(1) {
  font-size: 0.9em;
  margin: 12px 0 4px;
}

.talk-info > text:nth-of-type(2) {
  width: 120px;
  font-size: 15px;
  font-weight: 200;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.tag {
  position: absolute;
  top: -6px;
  left: 40px;
  width: 16px;
  height: 16px;
  background-color: red;
  border-radius: 8px;
  text-align: center;
}

.tag > text {
  position: relative;
  top: -8px;
  color: white;
  font-size: 13px;
}

.divide {
  margin-top: 8px;
  border-bottom: 1px solid;
  transform-origin: 0 0;
  transform: scaleY(0.5);
}
