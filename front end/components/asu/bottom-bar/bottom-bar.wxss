/* 这里的样式只应用于这个自定义组件 */

.inner {
  background: linear-gradient(to top, #145b74 0%, #171a21 100%);
  position: fixed;
  z-index: 1000;
  width: 100%;
  height: 65px;
  left: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: space-around;
  box-shadow: 0 -1px 10px -10px #333;
}

.inner > view {
  position: relative;
}

.icon, .iconOn {
  border-radius: 20px;
}

.icon {
  width: 52px;
  height: 52px;
  padding: 4px;
}

.iconOn {
  padding-top: 5px;
  width: 60px;
  height: 60px;
}

.inner > view > text {
  position: absolute;
  left: 50%;
  bottom: 0;
  transform: translateX(-50%);
  font-size: 15px;
  color: white;
}
