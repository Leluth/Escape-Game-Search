/* components/asu/drawer/drawer.wxss */

.box {
  padding: 10px 4% 0;
  overflow: hidden;
}

.card-on {
  box-shadow: 0 6px 20px 4px rgba(0, 0, 0, 1) !important;
}

.box > view {
  box-shadow: 0 6px 20px 2px rgba(0, 0, 0, 0.8);
  border-radius: 20px 20px 0 0;
  background: #1b2838;
  position: relative;
  transition: 0.6s ease-in-out;
  height: 60px;
}

.thumbnail, .more > view {
  display: flex;
  align-items: center;
  justify-content: space-around;
  color: white;
}

.more::before {
  content: '';
  width: 100%;
  height: 1px;
  background: #171a21;
  display: block;
}

.thumbnail > view:first-child, .more > view > view:first-child {
  width: 60px;
  height: 60px;
  text-align: center;
}

.thumbnail > view:first-child > text:first-child,
.more > view > view:first-child > text {
  display: block;
  margin-top: 5px;
}

.more > view > view:first-child > text {
  width: inherit;
  font-size: 14px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.more > view > view:first-child > image {
  margin-top: 2px;
  width: 30px;
  height: 30px;
}

.thumbnail > view:first-child > text:last-child {
  font-size: 12px;
}

.thumbnail > image, .more > view > image {
  width: 40px;
  height: 40px;
}

.thumbnail > view:nth-child(3), .more > view > view:nth-child(3) {
  width: 120px;
  position: relative;
  font-size: 15px;
}

.thumbnail > view:nth-child(3) > text:nth-child(2),
.more > view > view:nth-child(3) > text:nth-child(2) {
  position: absolute;
  right: 0;
}

.thumbnail > view:nth-child(3) > view, .more > view > view:nth-child(3) > view {
  margin: 6px 0 2px;
  height: 4px;
  background: no-repeat linear-gradient(225deg, #ff3cac 0%, #784ba0 50%, #2b86c5 100%),
                #171a21;
  background-size: 50%, 100%;
}

.thumbnail > view:nth-child(4), .more > view > view:nth-child(4) {
  width: 60px;
  height: 60px;
}

.thumbnail > view:nth-child(4) > image, .more > view > view:nth-child(4) > image {
  width: inherit;
  height: inherit;
}

.box > view > view:last-child {
  background: #1b2838;
  width: 100%;
  height: 20px;
  position: absolute;
  top: 100%;
}
